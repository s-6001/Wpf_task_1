        <Button Content="/" Width="50" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="210,260,0,0"/>
        <TextBlock Text="" Height="40" Width="240" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" FontSize="25" TextAlignment="Right" Background="White"/>
    </Grid>
</Window>
